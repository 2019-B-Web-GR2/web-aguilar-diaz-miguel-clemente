<%- include('../compartido/cabecera')%>
<div class="container">
    <h1>Ingresa tus credenciales</h1>

    <form action="/usuario/login"
          method="POST"
    >
        <div class="form-group">
            <label for="nombreID">Nombre</label>
            <input id="nombreID"
                   type="text"
                   name="username"
                   placeholder="Ej: Adrian Eguez"
                   title="Ingresar nombre de usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa un nombre mayor a 3 caracteres y menor a 10.
            </small>
        </div>
        <div class="form-group">
            <label for="cedulaID">Cedula</label>
            <input id="cedulaID"
                   type="password"
                   name="password"
                   placeholder="Ej: **********"
                   title="Ingresar la cedula del usuario"
                   class="form-control">
            <small id="cedulaIDHelp"
                   class="form-text text-muted">
                Ingresar una contrasena v√°lida.
            </small>
        </div>
        <button type="submit"
                class="btn btn-success"
        >
            Log in
        </button>
        <button type="reset"
                class="btn btn-secondary"
        >
            Limpiar formulario
        </button>
    </form>

</div>
